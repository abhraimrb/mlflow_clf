name: mlflow_clf

conda_env: conda.yaml

entry_points:
  main:
    parameters:
      num_boost_round: {type: int, default: 1000}
      learning_rate: {type: float, default: 0.1}
      num_leaves: {type: int, default: 31}
      max_depth: {type: int, default: -1}
      min_data_in_leaf: {type: int, default: 20}
    command: "python train_clf.py {train_path} {test_path} {num_boost_round} {learning_rate} {num_leaves} {max_depth} {min_data_in_leaf}"
